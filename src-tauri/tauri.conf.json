{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FileFlow",
  "version": "1.0.0",
  "identifier": "com.fileflow.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "FileFlow",
        "width": 1100,
        "height": 750,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "FileFlow",
    "copyright": "Copyright (c) 2026",
    "category": "Utility",
    "shortDescription": "File format converter",
    "longDescription": "A powerful file format converter supporting multiple formats",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "exceptionDomain": ""
    }
  },
  "plugins": {}
}
